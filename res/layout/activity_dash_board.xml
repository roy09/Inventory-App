<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="${packageName}.${activityClass}" >

	<RelativeLayout
	    android:layout_width="wrap_content"
	    android:layout_height="500dp"
	    android:layout_alignParentTop="true"
	    android:layout_centerHorizontal="true"
	    android:layout_centerVertical="true"
	    android:layout_marginTop="10dp" >

	    <Button
	        android:id="@+id/btnAddProduct"
	        android:layout_width="100dp"
	        android:layout_height="100dp"
	        android:layout_alignBaseline="@+id/btnPurchaseOrder"
	        android:layout_alignBottom="@+id/btnPurchaseOrder"
	        android:layout_alignParentLeft="true"
	        android:layout_marginLeft="34dp"
	        android:onClick="addProduct"
	        android:background="@drawable/add_product" />

	    <Button
	        android:id="@+id/btnSeeReports"
	        android:layout_width="100dp"
	        android:layout_height="100dp"
	        android:layout_alignLeft="@+id/btnSalesOrder"
	        android:layout_below="@+id/btnSalesOrder"
	        android:layout_marginTop="26dp"
	        android:onClick="seeReport"			
	        android:background="@drawable/see_reports" />

	    <Button
	        android:id="@+id/btnUserInfo"
	        android:layout_width="100dp"
	        android:layout_height="100dp"
	        android:layout_alignBaseline="@+id/btnSeeReports"
	        android:layout_alignBottom="@+id/btnSeeReports"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="25dp"
	        android:onClick="userInfo"
	        android:background="@drawable/user_info" />

	    <Button
	        android:id="@+id/btnPurchaseOrder"
	        android:layout_width="100dp"
	        android:layout_height="100dp"
	        android:layout_above="@+id/btnViewInventory"
	        android:layout_alignLeft="@+id/btnViewInventory"
	        android:layout_marginBottom="22dp"
	        android:onClick="purchaseOrder"
	        android:background="@drawable/purchase_order" />

	    <Button
	        android:id="@+id/btnSalesOrder"
	        android:layout_width="100dp"
	        android:layout_height="100dp"
	        android:layout_alignLeft="@+id/btnAddProduct"
	        android:layout_centerVertical="true"
	        android:onClick="salesOrder"
	        android:background="@drawable/sales_order" />

	    <Button
	        android:id="@+id/btnViewInventory"
	        android:layout_width="100dp"
	        android:layout_height="100dp"
	        android:layout_alignBaseline="@+id/btnSalesOrder"
	        android:layout_alignBottom="@+id/btnSalesOrder"
	        android:layout_alignLeft="@+id/btnUserInfo"
	        android:onClick="viewInventory"
	        android:background="@drawable/view_inventory" />

	</RelativeLayout>

</RelativeLayout>