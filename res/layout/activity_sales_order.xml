<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/svSalesOrder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".SalesOrder" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <TextView
            android:id="@+id/tvSalesOrderNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvSalesCustomer"
            android:layout_alignParentTop="true"
            android:text="Order no: "
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/tvSalesCustomer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/etSalesCustomerName"
            android:layout_alignTop="@+id/etSalesCustomerName"
            android:text="@string/customer_name"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/setSalesDate"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/etSalesCustomerName"
            android:text="Set date" />

        <EditText
            android:id="@+id/etSalesCustomerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/setSalesDate"
            android:layout_toRightOf="@+id/tvSalesCustomer"
            android:ems="10"
            android:hint="@string/ask_for_name" />

        <ListView
            android:id="@+id/lvSalesAddedItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvSalesCustomer"
            android:layout_below="@+id/tvSalesCustomer"
            android:layout_marginTop="16dp" >
        </ListView>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/lvSalesAddedItem"
            android:layout_below="@+id/lvSalesAddedItem"
            android:layout_marginTop="22dp"
            android:text="@string/net_payable"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </RelativeLayout>

</ScrollView>